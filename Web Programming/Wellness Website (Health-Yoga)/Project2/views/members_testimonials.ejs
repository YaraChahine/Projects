<body>
 
    <br><br><br><br>
    <h1 class="recipes-title">
        Testimonials
    </h1>
    <div class="testimonials-container">

        <% if (results.length!=0) { results.forEach(document=> {%>
            <div class="testimonial-card">
                   
                        <div>
                        <img src="data:image/<%=document.img.contentType%>;base64,
                        <%=document.img.data.toString('base64')%>"></div>
                   <div>
                        <h3> <%= document.name %>
                        </h3>
                        <h4>  <%= document.email %>
                        </h4>
                        <br>
                        <hr>
                        <br>
                        <h4>  <%= document.text %>
                        </h4>

                        <br><br>
                     
                   
                    </div>

            </div>
            <br>
            <hr><br>

            <%})}; %>

    </div>

    <style>


        .testimonials-container {
            display: flex;
            flex-direction: column;
            max-width: 70%;
            margin: auto;
            text-align: center;
            font-family: "Raleway";
            color:gray;
        }




        .testimonial-card {
            border-radius: 20px;
            box-shadow: 3px 3px 7px lightgrey;
            padding: 10px;
            display: flex;
            flex-direction: column;
        

        }

        .testimonial-card img {
            width: 230px;
            height: 200px;
            border-radius: 90px;
   
        }

        .recipes-title{
            font-family: Raleway;
            font-size: 40px;
            max-width: 200px;
            margin: auto;
            margin-top: 40px;
