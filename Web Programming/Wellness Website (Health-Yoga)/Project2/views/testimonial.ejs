    <div class="main-booking">

                    
        <h1> Tell us how "Wellness" has helped you. Your story can inspire others towards a better life!</h1>
        <fieldset><form>
                      
            <label for="testimonial">Write your testimonial here:  </label>
            <br><br>
            <textarea  required id="testimonial" name="testimonial" placeholder="Wellness has inspired me to..."></textarea>
            <br><br>
            <br><br>
            <button class="sbmt-button" type="button" onclick="s()">Submit</button> 

        </form>

        <div  id="success-msg" style="display:none;">
            <h3 style="color:green;">
                Your form has been successfully submitted!
            </h3>
        </div>
    </fieldset>
  </div>

    <script>
    function s() {
        let text=document.getElementById("testimonial").value;
        console.log(text);
        
        fetch("http://localhost:3022/submitTestimonial", {
          method: "POST",
          headers: {
            "Content-Type": "application/x-www-form-urlencoded; charset=UTF-8",
          },
          body: `text=${text}`,
        })
          .then(function (response) {
            console.log( response.text());
          })
          .then(function (data) {
            document.getElementById('success-msg').style.display="inline";
            if (data == "success") {
              console.log("success");
              
            }
          })
          .catch(function (err) {
            console.error(err);
          });
      }

</script>
   
  










